generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum VoteType {
  UP
  DOWN
}

enum Role {
  USER
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  googleSub String   @unique
  email     String? @unique 
  name      String?
  image     String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())

  votes     Vote[]
}


model Vote {
  id          String   @id @default(cuid())
  userId      String
  contentId   String
  pageUrl     String?
  pageHost    String?
  timeSeconds Int
  timeBucket  Int
  voteType    VoteType
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([contentId, timeBucket])
  @@unique([userId, contentId, timeBucket])
}

enum TranscriptStatus {
  NONE
  FETCHED
  FAILED
}

model Content {
  contentId          String           @id               // ex: yt:VIDEOID
  source             String?                             // "youtube"
  title              String?
  channelName        String?
  pageUrl            String?
  pageHost           String?

  captionBaseUrl     String?                             // YouTube caption track baseUrl
  captionLanguage    String?
  captionIsAuto      Boolean?                            // kind === "asr"

  transcriptStatus   TranscriptStatus @default(NONE)
  transcriptFetchedAt DateTime?
  transcriptError    String?

  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt

  segments           TranscriptSegment[]
}

model TranscriptSegment {
  id        String   @id @default(cuid())
  contentId String
  start     Int
  dur       Int
  text      String

  createdAt DateTime @default(now())

  content   Content  @relation(fields: [contentId], references: [contentId], onDelete: Cascade)

  @@index([contentId, start])
  @@unique([contentId, start])
}


